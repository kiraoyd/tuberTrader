    "@mikro-orm/core": "5.7.2",
    "@mikro-orm/migrations": "5.7.2",
    "@mikro-orm/postgresql": "5.7.2",
    "@mikro-orm/reflection": "5.7.2",
    "@mikro-orm/seeder": "5.7.2",
    "@fastify/cors": "^8.2.1",
    "@fastify/jwt": "^6.7.1",
    "@fastify/middie": "^8.2.0",
    "@fastify/multipart": "^7.6.0",
    "@fastify/oauth2": "^7.1.0",
    "@fastify/static": "^6.10.1",
    "axios": "^1.4.0",
    "bcrypt": "^5.1.0",
    "cors": "^2.8.5",
    "dotenv": "^16.0.3",
    "express": "^4.18.2",
    "express-openid-connect": "^2.16.0",
    "fastify": "^4.17.0",
    "fastify-auth0-verify": "^1.1.1",
    "fastify-cors": "^6.1.0",
    "fastify-env": "^2.2.0",
    "fastify-oauth2": "^4.6.0",
    "fastify-plugin": "^4.5.0",
    "jsonwebtoken": "^9.0.0",
    "minio": "^7.1.0",
    "pg": "^8.10.0",
    "pino": "^8.14.1",
    "reflect-metadata": "^0.1.13",
    "mikro-orm-soft-delete": "^0.1.0"
  },
  "devDependencies": {
    "@digitak/tsc-esm": "^3.1.4",
    "@faker-js/faker": "^7.6.0",
    "@mikro-orm/cli": "5.7.2",
    "@swc/cli": "^0.1.62",
    "@swc/core": "^1.3.56",
    "@types/cors": "^2.8.13",
    "@types/node": "^18.16.6",
    "@types/supertest": "^2.0.12",
    "@typescript-eslint/eslint-plugin": "^5.59.5",
    "@typescript-eslint/parser": "^5.59.5",
    "@vitest/coverage-c8": "^0.28.5",
    "@vitest/ui": "^0.28.5",
    "better-docs": "^2.7.2",
    "c8": "^7.13.0",
    "esbuild": "^0.17.18",
    "eslint": "^8.40.0",
    "fastify-cli": "^5.7.1",
    "jsdoc": "^4.0.2",
    "nodemon": "^2.0.22",
    "pino-pretty": "^9.4.0",
    "pnpm": "^7.32.3",
    "prop-types": "^15.8.1",
    "react": "^17.0.2",
    "react-dom": "^17.0.2",
    "rimraf": "^4.4.1",
    "supertest": "^6.3.3",
    "taffydb": "^2.7.3",
    "ts-node": "^10.9.1",
    "tsconfig-paths": "^4.2.0",
    "typescript": "^4.9.5",
    "vite": "^4.3.5",
    "vite-node": "^0.28.5",
    "vite-plugin-dts": "^1.7.3",
    "vite-plugin-node": "^3.0.2",
    "vitest": "^0.28.5"
  },
  "mikro-orm": {
    "useTsNode": true,
    "configPaths": [
      "./src/db/mikro-orm.config.ts",
      "./build/db/mikro-orm.config.js"
    ]
  },
  "tap": {
    "node-arg": [
      "--loader=ts-node/esm"
    ],
    "coverage": false,
    "ts": true
  }
}